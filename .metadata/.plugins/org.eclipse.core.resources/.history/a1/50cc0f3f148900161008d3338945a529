// Collaborative Programming Exercise - Cody Leung Pd2. 

import java.util.*;
public class Collab {
	public static void main (String[] args){
		Scanner num = new Scanner(System.in);
		System.out.println("How Many Numbers Are You Going To Enter?");
		int totalNum = num.nextInt();
		int next2 = 0;
		int max = 0;
		int min = 0;
		
		
	for(int i = 1;i<=totalNum ;i++){
		System.out.println("Please Enter Your Number: ");
		int next = num.nextInt();
		if(next>max){
			max = next;
			System.out.println("This is the max number: " +  max);
			}
		if(min<next){
			min = next;
			System.out.println("This is the min number: " + min);
		}
			
		if(next%2 == 0){
			next2  = next2 + next; 
			System.out.println("Sum of even numbers: " + next2);
			
		}
			
			
		}
	num.close();
	}
}
